{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "es2020",
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true,
    "outDir": "build/",
    "rootDir": ".",
    "baseUrl": "behavior_packs/",
    "listFiles": false,
    "noEmitHelpers": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
