{
    "name": "hello-npm",
    "version": "1.0.0",
    "description": "A template npm package",
    "keywords": [
        "vitest",
        "npm",
        "template",
        "prettier",
        "eslint",
        "husky"
    ],
    "license": "MIT",
    "author": "Mark Wiemer",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "fixup": "npm run packagejson_fix && npm run format_fix && npm run quality_fix",
        "fixup//": "echo Fix auto-fixable problems with the project",
        "format": "npm run format_inner -- --check .",
        "format//": "echo Match code style standards",
        "format_fix": "npm run format_inner -- --write .",
        "format_inner": "prettier",
        "packagejson": "npm run packagejson_inner -- --check",
        "packagejson//": "echo Check whether package.json is sorted or sort it",
        "packagejson_fix": "npm run packagejson_inner",
        "packagejson_inner": "sort-package-json",
        "prepare": "cd ../../../../.. && husky install projects/inventoryManagement/packs/data/gametests/.husky",
        "prepare//": "echo https://typicode.github.io/husky/#/?id=custom-directory",
        "quality": "npm run quality_all -- --max-warnings=0 && echo No quality problems",
        "quality//": "echo Checks code quality for common mistakes",
        "quality_all": "npm run quality_inner -- src",
        "quality_fix": "npm run quality_all -- --fix",
        "quality_glob": "npm run quality_inner -- --max-warnings=0",
        "quality_inner": "eslint --ext ts",
        "test": "vitest",
        "testonce": "vitest run",
        "validate": "npm run validate_source && npm run format && npm run packagejson && echo :)",
        "validate//": "echo Ensure everything with the project is working correctly",
        "validate_source": "tsc && npm run quality && npm run testonce",
        "validate_source//": "Validations specific to code files"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/mojang-gametest": "^0.1.5",
        "@types/mojang-minecraft": "^0.1.6",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "eslint": "^8.25.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "2.7.1",
        "sort-package-json": "^2.0.0",
        "typescript": "~4.8.4",
        "vitest": "^0.24.3"
    }
}
