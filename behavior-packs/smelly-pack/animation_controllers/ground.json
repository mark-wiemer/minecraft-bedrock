{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ground": {
      "states": {
        "default": {
          "transitions": [
            {
              "scroll": "query.is_on_ground"
            }
          ],
          "on_exit": ["/tag @s add on_ground"]
        },
        "scroll": {
          "transitions": [
            {
              "default": "!query.is_on_ground"
            }
          ],
          "on_exit": ["/tag @s remove on_ground"]
        }
      }
    }
  }
}
